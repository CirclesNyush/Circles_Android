<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.anpu.circles.HomePage1">

<include
    android:id="@+id/appbar"
    layout="@layout/app_bar"
    >
</include>


<android.support.v4.view.ViewPager
    android:id="@+id/pageviewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/bottomdrawer">

</android.support.v4.view.ViewPager>

<android.support.design.widget.BottomNavigationView
    android:id="@+id/bottomdrawer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:itemIconTint="@drawable/bottom_background"
    app:itemTextColor="@drawable/bottom_background"
    android:layout_alignParentBottom="true"
    app:menu="@menu/bottom_nav"
    />

<View
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:layout_above="@id/bottomdrawer"
    android:background="@drawable/bottom_shadow" />

</RelativeLayout>

